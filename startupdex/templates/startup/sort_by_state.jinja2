{% extends "../base.jinja2" %}
{% block title %}
Browsing startups at
{% endblock %}

{% block left_focus %}
	<div class="row">
		<div class="col-md-12">
				<h4>
					Startups Sorted by State
				</h4>
		</div>
	</div>

{% if rowcount == 0 %}
	<p>
		No results for the region "{{ state }}".
	</p>
{% else %}
	<p>
		{{ rowcount }} results for the region "{{ state }}".
	</p>
{% endif %}
	{% for startup in startups %}
		<div class="row margin-bottom-12px">
			<div class="col-xs-2">
					<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
						{% include "../image/startup.jinja2" %}
					</a>
			</div>
						<div class="col-xs-10">
							<h5 class="browse-startup-heading">
								<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
									{{ startup.name }}
								</a>
							</h5>

				<p>
					{{ startup.short_info[:300] }}
				</p>
			</div>
		</div>

	{% endfor %}

<div class="row">
	<div class="col-md-12">
		<nav>
			<ul class="pagination">
				<li {{ 'class=disabled' if page == 1 }}>
					{% if page != 1 %}
						<a href="{{ gibs.application_url }}s/{{ state }}?page={{page-1}}" aria-label="Previous">
					{% endif %}
					<span aria-hidden="true">&laquo;</span>
				</a></li>
				{% for i in range(1, num_pages+1) %}
				<li {{ 'class=active' if page == i }}>
					<a
					{% if page != i %}
						href="{{ gibs.application_url }}s/{{ state }}?page={{i}}"
					{% endif %}
					>
						{{ i }}
					</a></li>
				{% endfor %}
				<li {{ 'class=disabled' if page == num_pages }}>
					{% if page != num_pages %}
						<a href="{{ gibs.application_url }}s/{{ state }}?page={{page+1}}" aria-label="Next">
					{% endif %}
						<span aria-hidden="true">&raquo;</span>
					</a></li>
			</ul>
		</nav>


	</div>
</div>

{% endblock left_focus %}
