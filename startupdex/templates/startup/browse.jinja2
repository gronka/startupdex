{% extends "../base.jinja2" %}
{% block title %}
Browsing startups at
{% endblock %}

{% block left_focus %}
<div class="well well-sm">
	<div class="row">
		<div class="col-md-12">
				<h4>
					Browsing all listed startups at StartupDex
				</h4>
		</div>
	</div>

	{% for startup in startups %}
		<div class="row bottom-buffer-12px">
			<div class="col-xs-2">
					<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
				{% if startup.logo_url is not none %}
							<img src="{{ gibs.images_url }}{{ startup.logo_url }}" alt="{{ startup.name }} thumbnail" class="img-rounded img-responsive browse-thumb" width="100%">
				{% else %}
							<img src="{{ gibs.images_url }}startup.jpg" alt="{{ startup.name }} thumbnail" class="img-rounded img-responsive browse-thumb" width="100%">
				{% endif %}
					</a>
			</div>
						<div class="col-xs-10">
							<h5 class="browse-startup-heading">
								<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
									{{ startup.name }}
								</a>
							</h5>

				<p>
					{{ startup.short_info[:300] }}
				</p>
			</div>
		</div>

	{% endfor %}

	<div class="row">
		<div class="col-md-6">


		</div>

		<div class="col-md-6">

		</div>
	</div>
</div>




{% endblock left_focus %}
