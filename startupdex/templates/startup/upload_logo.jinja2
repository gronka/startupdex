{% extends "../base.jinja2" %}
{% block title %}
Upload Logo at
{% endblock %}


{% block content %}

<div class="container">
	<div class="row">

			<div class="col-sm-9 col-sm-offset-1">
				<br />
				<h3 class="settings_editable">Logo Upload for {{ startup.name }}</h3>
				<br />
				<br />
			<input type="hidden" name="userid" id="userid" value="{{ user.id }}" />
			<form method="POST" enctype="multipart/form-data"
				action="{{ gibs.application_url }}upload_logo/{{ startup.id  }}">
						<table class="table">
							<tr>
								<td class="col-xs-3 col-sm-2">Upload an Image</td>
								<td>
									<input type="file" name="logo" id="logo">
								</td>
							</tr>
							<tr>
								<td class="col-xs-3 col-sm-2">Image Preview</td>
								<td>
									<img class="photo-preview" src="#" alt="">
								</td>
							</tr>
							<tr>
								<td class="col-xs-3 col-sm-2"></td>
								<td><button type="submit" class="btn btn-primary" id="save-changes" name="form.submitted"><i class="glyphicon glyphicon-upload"></i> Upload Logo</button></td>
							</tr>
						</table>
					</form>
			</div>
	
	
	</div>
</div>


{% endblock content %}
