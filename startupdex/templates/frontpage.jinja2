{% extends "base.jinja2" %}
{% block title %}{% endblock %}
{% block head %}
    {{ super() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}


{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-9">
		<div class="well well-sm">
			<div class="row">
				<div class="col-xs-3">
					<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
						{% include "snips/image_startup.jinja2" %}
					</a>
				</div>

				<div class="col-xs-9">
					<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
						<h3>{{ startup.name }}</h3>
					</a>
					<p>
						{% if startup.city %}
							{{ startup.city }}, 
						{% endif %}
						{{ startup.country if startup.country }}
					</p>
					{% if startup.contact_email %}
						<p>{{ startup.contact_email }}</p>
					{% endif %}
					{% if startup.about %}
						<p>{{ startup.about }}</p>
					{% endif %}


				</div>
			</div>

		</div>
		<div class="row">
			<h3 class="margin-top-0px margin-bottom-0px">Trending Startups</h3>
		</div>
		{% for startup_row in startups | batch(6) %}
		<div class="row">
			{% for startup in startup_row %}
			<div class="col-xs-2" data-sr>
				<a href="{{ gibs.application_url }}startup/{{ startup.local_url }}">
					{% include "snips/image_startup.jinja2" %}
					<h4 class="text-center">{{ startup.name }}</h4>
				</a>
			</div>
			{% endfor %}
		</div>
		{% endfor %}
		</div>


		<div class="hidden-xs hidden-sm col-md-3">
			{% include "snips/startups_sidebar.jinja2" %}
		</div>
	</div>
</div>



{% include "search/state_directory.jinja2" %}

{% endblock content %}

