		{% for article in article_row %}
		<div class="col-md-3" data-sr>
			<a href="#">
				<img src="{{ gibs.images_url }}{{ article.thumb_url }}" alt="{{ article.thumb_url }}" class="img-responsive hidden-sm hidden-xs" width="100%">
				<h4 class="text-center">{{ article.title }}</h4>
			</a>
			<p>
				{{ article.lead_text }}
			</p>
	
		</div>
		{% endfor %}

