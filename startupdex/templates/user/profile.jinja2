{% extends "../base.jinja2" %}
{% block title %}
{{ user.name }} at
{% endblock %}

{% block left_focus %}
<div class="well well-sm">
	<div class="row">
		<div class="col-xs-3">
			{% if user.photo_url is not none %}
				<img src="{{ gibs.images_url }}{{ user.photo_url }}" alt="{{ user.photo_url }}" class="img-responsive" width="100%">
			{% else %}
				<img src="{{ gibs.images_url }}user.png" alt="{{ user.fullname }} thumbnail" class="img-rounded img-responsive browse-thumb" width="100%">
			{% endif %}
		</div>

		<div class="col-xs-9">
			<h3>{{ user.fullname }}</h3>
			<p>
				{{ user.city if user.city }}, {{ user.country }}
			</p>
			{% if user.home_url %}
				<p>{{ user.home_url }}</p>
			{% endif %}
			{% if user.blog_url %}
				<p>{{ user.blog_url }}</p>
			{% endif %}

		</div>
	</div>
</div>


