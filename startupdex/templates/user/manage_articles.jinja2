{% extends "../base.jinja2" %}
{% block title %}
Settings at
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
	{% set active_tab = 'articles' %}
	{% include "manage_tabs.jinja2" %}
</div>
<div class="row">
	<div class="col-xs-12">
		<br />
		<h3 class="settings_editable">Manage Articles</h3>
			<a class="btn btn-default" href="{{ gibs.application_url }}create_article"><i class="glyphicon glyphicon-plus-sign"></i> Add an Article</a>
		<br />
		<br />
		{% if articles is none %}
		<p>
			You currently have no articles.
		</p>
		{% else %}
			<div class="well well-sm well-manage">
				<h3 class="subhead-manage">Your Listed articles</h3>
				{% for article_row in articles | batch(6) %}
				<div class="row">
					{% for article in article_row %}
						<div class="col-sm-2" data-sr>
							<p>
								<a href="{{ gibs.application_url }}article/{{ article.local_url }}">
									<h4 class="text-center">{{ article.title }}</h4>
									{% include "../snips/image_article.jinja2" %}
								</a>
							</p>
							<p>
								<a class="btn btn-default" href="{{ gibs.application_url }}modify_article/{{ article.id }}"><i class="glyphicon glyphicon-cog"></i> Modify</a>
							</p>
					
						</div>
					{% endfor %}
				</div>
				{% endfor %}
			</div>
		{% endif %}


	</div>
</div>
</div>


{% endblock content %}

